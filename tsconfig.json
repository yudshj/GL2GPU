{
    "$schema": "https://json.schemastore.org/tsconfig",
    "compilerOptions": {
        "removeComments": true,
        "target": "ES2023",
        "module": "ES2022",
        "esModuleInterop": false,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "dist/tsc/",
        "rootDir": "src",
        "strict": false,
        "moduleResolution": "node",
        "typeRoots": [
            "./node_modules/@webgpu/types",
            "./node_modules/@types",
            "./node_modules/@types/chrome"
        ],
        "resolveJsonModule": true,
        "declaration": true,
        // "declarationDir": "./types",
        // "sourceMap": true,
        "allowJs": true
    },
    "include": [
        // "src/*.ts",
        // "src/components/*.ts",
        // "src/capture.js",
        "src/webgl-static.ts"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "shader",
        "webpack.config.js"
    ]
}